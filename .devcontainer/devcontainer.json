{
  "name": "SS368 dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",

  // Auto-install extensions + settings in Codespaces (web VS Code included)
  "customizations": {
    "vscode": {
      "extensions": [
        "kylebarron.stata-enhanced" // Stata syntax highlighting (web-safe)
        // Optional extras:
        // "kylebutts.vscode-stata"
      ],
      "settings": {
        "files.associations": {
          "*.do": "stata",
          "*.ado": "stata",
          "*.sthlp": "markdown"
        }
      }
    }
  },

  // Install Git LFS automatically
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  }
}
