{
  "name": "SS368 dev",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "customizations": {
    "vscode": {
      "extensions": ["kylebarron.stata-enhanced"],
      "settings": {
        "files.associations": {
          "*.do": "stata",
          "*.DO": "stata",
          "*.ado": "stata",
          "*.ADO": "stata",
          "*.sthlp": "markdown",
          "*.STHLP": "markdown"
        }
      }
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git-lfs:1": {}
  },
  "postCreateCommand": "git lfs install || true"
}
